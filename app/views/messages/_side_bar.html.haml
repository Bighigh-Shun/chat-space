.side-bar
  .side-bar-header
    .header-contents
      .user-name
        = current_user.name
      .side-bar-icon
        = link_to new_group_path, class: "link" do
          = icon('fas', 'edit', class: 'icon')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group-contents
        = link_to group_messages_path(group),class: "group-link" do
          .group-name
            = group.name
          .group-chat
            = group.show_last_message